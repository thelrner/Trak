<div class="sign-in-cover"></div>

<div class="sign-in-background"></div>

<div class="sign-in-container">
  <div class="sign-in-content">

    <h1>Sign In</h1>

    <form class="user-sign-in" action="<%= session_url %>" method="post">
      <%= auth_token %>
      <label for="email">Email</label>
      <input id="email" type="text" name="user[email]">
      <label for="password">Password</label>
      <input id="password" type="password" name="user[password]">
      <button>Submit</button>
    </form>

    <p>
      Not a member yet? Git good.
      <a href="<%= new_user_url %>">Register New User</a>
    </p>

  </div>
</div>
